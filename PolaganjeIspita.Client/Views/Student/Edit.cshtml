@using PolaganjeIspita.Client.Controllers
@model PolaganjeIspita.Client.Models.StudentBO
@{
    ViewBag.Title = "Edit";
}
<h2>Edit</h2>

@using (Html.BeginForm())
{
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="row">
            <div class="col-md-3">
                <label class="control-label">Ime</label>
                @Html.EditorFor(bo => bo.Ime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(bo => bo.Ime, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                <label>Prezime:</label>
                @Html.EditorFor(model => model.Prezime, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-3">
                <label>Godina upisa:</label>
                @Html.EditorFor(model => model.GodinaUpisa, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-3">
                <label>Smer:</label>
                @Html.DropDownListFor(model => model.Smer.Id, new SelectList(@ViewBag.Smerovi, "Id", "Naziv"), new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Sacuvaj promene" class="btn btn-default" />
        </div>

    </div>
</div>

}
<br />

<h4>Polagani ispiti:</h4>
<br />
@if (Model != null)
{

    Html.RenderAction("GetIspiteByStudent", "PrijavaIspita", Model.Id);
}



